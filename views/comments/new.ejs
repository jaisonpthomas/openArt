<% include ../partials/header%>


<div class="row">
    <h1 style="text-align: center;">Add Comment to "<%=piece.title%>"</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/pieces/<%=piece._id%>/comments" method="POST">
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="comment[author]" placeholder="Author"/>
            </div>
            <div class="form-group">
                <textarea required class="form-control styledForm" type="text" name="comment[text]" placeholder="Comment"></textarea>
            </div>
            <button class="btn btn-large btn-default darkButton btn-block">Submit</button>
        </form>
    </div>

</div>

<% include ../partials/footer%>