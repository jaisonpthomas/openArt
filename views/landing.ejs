<form class="form-inline" action="/login" method="POST">
  <div class="form-group" style="margin-right: 2em">
    <input autofocus required type="text" class="form-control styledForm" name="username" placeholder="Username">
  </div>
  <div class="form-group" style="margin-right: 2em;">
    <input required type="password" class="form-control styledForm" name="password" placeholder="Password">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-large btn-default darkButton">Login</button>
  </div>
</form>


