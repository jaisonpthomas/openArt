<% include ./partials/header%>

<div class="row">
    <h1 style="text-align: center;">Register</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/register" method="POST">
            <div class="form-group">
                <input autofocus required class="form-control styledForm" type="text" name="username" placeholder="Username"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="password" name="password" placeholder="Password"/>
            </div>
            <button class="btn btn-large btn-default darkButton btn-block">Submit</button>
        </form>
    </div>

</div>

