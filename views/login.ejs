<% include ./partials/header%>


<div class="row">
    <h1 style="text-align: center;">Login</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/login" method="POST">
            <div class="form-group">
                <input autofocus required type="text" class="form-control styledForm" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input required type="password" class="form-control styledForm" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-large btn-default darkButton btn-block">Submit</button>
            </div>
        </form>
    </div>

</div>

<% include ./partials/footer%>