<% include ../partials/header%>


<div class="row">
    <h1 style="text-align: center;">Edit - "<%= piece.title %>"</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/pieces/<%= piece._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input required autofocus class="form-control styledForm" type="text" name="piece[title]" value="<%=piece.title%>"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="piece[artist]" value="<%=piece.artist%>"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="piece[artform]" value="<%=piece.artform%>"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="number" name="piece[year]" value="<%=piece.year%>"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="piece[image]" value="<%=piece.image%>"/>
            </div>
            <button class="btn btn-large btn-default darkButton btn-block">Submit</button>
        </form>
    </div>

</div>

<% include ../partials/footer%>