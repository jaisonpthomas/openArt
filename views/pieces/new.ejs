<% include ../partials/header%>


<div class="row">
    <h1 style="text-align: center;">Submit a New Piece</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/pieces" method="POST">
            <div class="form-group">
                <input required autofocus class="form-control styledForm" type="text" name="title" placeholder="Title"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="artist" placeholder="Artist"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="artform" placeholder="Artform"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="year" placeholder="Year"/>
            </div>
            <div class="form-group">
                <input required class="form-control styledForm" type="text" name="image" placeholder="Image Link"/>
            </div>
            <button class="btn btn-large btn-default darkButton btn-block">Submit</button>
        </form>
    </div>

</div>

<% include ../partials/footer%>